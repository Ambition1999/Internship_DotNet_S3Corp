<script>
    $('#txtSearchHome').on('keyup', function () {
        var searchValue = $(this).val();
        searchAndFilter(searchValue)
    })
    function searchAndFilter(searchString) {
        if (searchString == '') {
            $('.list-restaurant-row .item-restaurant').hide();
        }
        else {
            $('.list-restaurant-row .item-restaurant').each(function () {
                var currentText = $(this).text();
                currentText = currentText.toLowerCase();
                searchString = searchString.toLowerCase();
                if (currentText.indexOf(searchString) >= 0) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }
            });
        }
    }

    $(document).ready(function () {
        $('.list-restaurant-row .item-restaurant').hide();
    });
</script>

<script>
    $(window).scroll(function () {
        var hT = $('#last-view-more').offset().top,
            hH = $('#last-view-more').outerHeight(),
            wH = $(window).height(),
            wS = $(this).scrollTop();
        if (wS > (hT + hH - wH + 50) && (hT > wS) && (wS + wH > hT + hH)) {
            $('#now-banner').css({ position: 'absolute', top: 700 });
        } else if (wS < (hT + hH - wH + 50) && (hT > wS) && (wS + wH > hT + hH)) {
            $('#now-banner').css({ position: 'fixed', top: 70 });
        }
    });
</script>


