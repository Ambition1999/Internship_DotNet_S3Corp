                            @{
                                if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <div class="item-restaurant">
                                            <a href="@Url.Action("GetRestaurantInfo_MenuItemInfoByID", "Restaurant", new {restaurantId = item.Id})" class="item-content">
                                                <div class="img-restaurant">
                                                    <img src="~/Content/Image/ImgRestaurant/@Html.DisplayFor(model => item.Image)" alt="imgRes">
                                                </div>
                                                <div class="info-restaurant">
                                                    <div class="name-res">@Html.DisplayFor(model => item.RestaurantName)</div>
                                                    <div class="address-res">@Html.DisplayFor(model => item.Address), P.@Html.DisplayFor(model => item.WardName), Q.@Html.DisplayFor(model => item.DisctrictName), @Html.DisplayFor(model => item.ProvinceName)</div>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            }
            <div class="category-list-filter">
                <a href="@Url.Action("GetAllRestaurant","Restaurant")"><span class="category-item">All</span></a>
                <a href="@Url.Action("GetRestaurantByTagName","Restaurant", new { kindId = 1 })"><span class="category-item">Đồ ăn</span></a>
