@using Model.DTO
@model IEnumerable<DtoUserInfo>

@{
    ViewBag.Title = "UserManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/CSSFile/AdminCSS/Now_AdminCSS.css">

<div class="row">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Quản lý người dùng</h3>
        </div>
        <div class="box-body">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(model => item.UserId)</th>
                                    <td>@Html.DisplayFor(model => item.Name)</td>
                                    <td>@Html.DisplayFor(model => item.Email)</td>
                                    <td>@Html.DisplayFor(model => item.Phone)</td>
                                    <td>@Html.DisplayFor(model => item.RoleName) </td>
                                    @if (item.Status == 1)
                                    {
                                        <td><span class="badge badge-success">Active</span></td>
                                    }
                                    else if (item.Status == -1)
                                    {
                                        <td><span class="badge badge-success">Locked</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-success">Deactive</span></td>
                                    }

                                    <td>
                                        <button type="button" class="btn btn-primary btn-detailt"><i class="fa fa-eye"></i></button>
                                        <button type="button" class="btn btn-success"><i class="fa fa-edit"></i></button>
                                        <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <dialog id="favDialog">
            <form method="dialog">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-12">
                            <div class="well well-sm">
                                <div class="row">
                                    <div class="col-sm-6 col-md-5">
                                        <img src="http://placehold.it/380x500" alt="userImg" class="img-rounded img-responsive avatar-user">
                                    </div>
                                    <div class="col-sm-6 col-md-7">
                                        <h4>Le Chi Toan</h4>
                                        <p>
                                            <i class="fa fa-male" aria-hidden="true"></i> Male
                                            <br>
                                            <i class="fa fa-envelope" aria-hidden="true"></i> abc@gmail.com
                                            <br>
                                            <i class="fa fa-phone-square" aria-hidden="true"></i> 0123456789
                                            <br>
                                            <i class="fa fa-id-card" aria-hidden="true"></i> User
                                            <br>
                                            <i class="fa fa-users" aria-hidden="true"></i> <span class="badge badge-success">Active</span>
                                            <br>
                                            <i class="fa fa-calendar" aria-hidden="true"></i> 22/02/2020
                                            <br>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <menu>
                    <button class="btn btn-primary">Confirm</button>
                </menu>
            </form>
        </dialog>
    </div>
    <script>
        $('.btn-detailt').click(function(){
            var favDialog = document.getElementById('favDialog');
            favDialog.showModal();
        })
    </script>
</div>
